<%- include('../partials/header', { title: 'Booking Details' }) %>
<%- include('../partials/navbar') %>

<main class="container my-4 flex-grow-1">
  <h2 class="mb-4">Edit Booking - Ref <%= booking.b_ref %></h2>

  <form method="POST" action="/staff/reception/booking/<%= booking.b_ref %>/update">
    <div class="mb-3">
      <label class="form-label">Guest Name</label>
      <input type="text" class="form-control" name="guest" value="<%= booking.c_name %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Room Number</label>
      <input type="number" class="form-control" name="room" value="<%= booking.r_no %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Room Type</label>
      <input type="text" class="form-control" name="type" value="<%= booking.r_class %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Check-In Date</label>
      <input type="date" class="form-control" name="checkin" value="<%= booking.check_in %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Check-Out Date</label>
      <input type="date" class="form-control" name="checkout" value="<%= booking.check_out %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Number of Nights</label>
      <input type="number" class="form-control" name="nights" value="<%= booking.nights %>" required>
    </div>
  
    <div class="mb-3">
      <label class="form-label">Number of Guests</label>
      <input type="number" class="form-control" name="guests" value="<%= booking.guests %>">
    </div>
  
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/staff/reception" class="btn btn-secondary ms-2">Back</a>
  </form>
  
</main>

<%- include('../partials/footer') %>
