<%- include('../partials/header', { title: 'Reception Dashboard' }) %>
<%- include('../partials/navbar') %>

<!-- Main content section -->
<main class="container my-4 flex-grow-1">
  <div class="card p-4 shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h2 class="mb-1">Reception Dashboard</h2>
        <p class="lead mb-0">Manage customer bookings, check-ins and cancellations.</p>
      </div>

      <div class="d-flex align-items-center">
        <label for="filter" class="me-2 fw-bold">Filter:</label>
        <select id="filter" class="form-select w-auto">
          <option value="all">All bookings</option>
          <option value="checkin_today">Check-in today</option>
          <option value="checkout_today">Check-out today</option>
        </select>
      </div>
    </div>

    <!-- Responsive table for booking records -->
    <div class="table-responsive">
      <table class="table table-striped" id="bookingTable">
        <thead class="table-dark">
          <tr>
            <th>Booking Ref</th>
            <th>Name</th>
            <th>Room</th>
            <th>Type</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Nights</th>
            <th>Guests</th>
            <th>Total (£)</th>
            <th>Outstanding (£)</th>
            <th>Checking</th>
          </tr>
        </thead>
        <tbody>
          <!-- Populated by JS using the Database -->
        </tbody>
      </table>
    </div>
  </div>
</main>

<!-- jQuery and DataTables -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<!-- Custom Dashboard JS -->
<script src="/staff/js/reception.js"></script>

<%- include('../partials/footer') %>
